

@model Ingredient


<div class="container">
    <div class="row">
        <div class="col-12 d-flex flex-column align-items-center">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Nuovo Ingrediente</h1>
            </div>
            <form class="row g-3" asp-controller="Ingrediente" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="col-md-12">
                    <strong>Nome:</strong>
                    <input asp-for="Name" class="d-block w-100" />
                    <span asp-validation-for="Name" class="text-warning"></span>
                </div>
                
               
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Salva Ingrediente</button>
                </div>
            </form>

        </div>
    </div>
</div>