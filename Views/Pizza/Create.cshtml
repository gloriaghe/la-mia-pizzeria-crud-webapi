@using la_mia_pizzeria_static.Models.Form

@model PizzaForm


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Nuova Pizza</h1>
            </div>
            <form class="row g-3" asp-controller="Pizza" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="col-md-12">
                    <strong>Nome:</strong>
                    <input asp-for="Pizza.Name" class="d-block w-100" />
                    <span asp-validation-for="Pizza.Name" class="text-warning"></span>
                </div>
                <div class="col-12">
                    <strong>Descrizione:</strong>
                    <textarea asp-for="Pizza.Description" rows="5" class="d-block w-100"></textarea>
                    <span asp-validation-for="Pizza.Description" class="text-warning"></span>
                </div>
                <div class="col-12">
                    <strong>Immagine:</strong>
                    <input asp-for="Pizza.Image" class="d-block w-100" />
                    <span asp-validation-for="Pizza.Image" class="text-warning"></span>
                </div>
                <div class="col-md-4">
                    <strong>Prezzo:</strong>
                    <input asp-for="Pizza.Price" class="d-block w-100" />
                    <span asp-validation-for="Pizza.Price" class="text-warning"></span>
                </div>
                <div class="mb-3">
                    <strong>Categoria:</strong>
                    <select asp-for="Pizza.CategoryId" rows="10" class="d-block w-100">
                        @foreach (Category category in Model.Categories)
                        {
                            @if (Model.Pizza.CategoryId == category.Id)
                            {
                                <option value="@category.Id" selected>@category.Name</option>
                            }
                            else
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <strong>Ingredienti:</strong>
                    <select asp-for="SelectedIngredients"
                            asp-items="@Model.Ingredients"
                            multiple="multiple"
                            size="10"
                            class="form-control mb-2 mr-sm-2 ml-sm-3 leftList">
                    </select>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Salva Pizza</button>
                </div>
            </form>

        </div>
    </div>
</div>