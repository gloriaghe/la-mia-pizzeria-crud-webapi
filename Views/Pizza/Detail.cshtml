@model Pizza

<div id="detailPizza" class="d-flex justify-content-center">
    <div class="card d-flex flex-row align-items-center text-center" style="width: 70%">
        <img src="@Model.Image" class="card-img-top" alt="@Model.Name">
        <div class="card-body d-flex flex-column justify-content-center" style="margin-right:20px">
            <h3 class="text-uppercase">@Model.Name</h3>
            <p class="card-text">@Model.Description</p>
            <strong>@Model.Price Euro</strong>
            <br />
            <span><strong>Categoria: </strong>@Model.Category.Name</span>
            <br />
            <div>
                <strong>Ingredienti:</strong>
                <br>
                @foreach (Ingredient ing in Model.Ingredients)
                {
                    <span>@ing.Name</span> <br/>
                }
            </div>
        </div>
    </div>
</div>